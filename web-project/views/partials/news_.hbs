<section id="news" class="news">
  <h1 class="news__title">Новости о машинах и услугах</h1>
  {{#each news}}
    <div class="news__item">
      <details>
        <summary>{{this.title}}</summary>
        <p>{{this.content}}</p>
      </details>
    </div>
  {{/each}}
  <aside class="news__aside">
    <h3>Полезные статьи</h3>
    <ul>
      <li><a href="#">Как выбрать машину</a></li>
      <li><a href="#">Советы по обслуживанию</a></li>
    </ul>
  </aside>
</section>